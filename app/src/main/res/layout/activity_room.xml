<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Room"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROOM"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="italic|bold"
            android:textColor="#1C1866"/>


        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="#1C1866"
            android:layout_marginHorizontal="120dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double Seater With AC"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#1C1866"/>

        <View
            android:layout_width="210dp"
            android:layout_height="1dp"
            android:background="#1C1866"
            android:layout_marginHorizontal="120dp"/>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/room1"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single Seater"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#1C1866"/>

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#1C1866"
            android:layout_marginHorizontal="120dp"/>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/room2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triple Seater"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#1C1866"/>

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="#1C1866"
            android:layout_marginHorizontal="120dp"/>


        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/room3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double Seater Non-AC"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#1C1866"/>

        <View
            android:layout_width="215dp"
            android:layout_height="1dp"
            android:background="#1C1866"
            android:layout_marginHorizontal="120dp"/>


        <ImageView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:src="@drawable/room5" />






    </LinearLayout>

</ScrollView>