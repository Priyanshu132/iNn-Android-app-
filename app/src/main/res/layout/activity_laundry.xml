<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laundry"
    android:orientation="vertical"
    android:background="@drawable/facility1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAUNDRY"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="30dp"
        android:textStyle="italic|bold"
        android:textColor="#1C1866"/>


    <View
        android:layout_width="205dp"
        android:layout_height="1dp"
        android:background="#1C1866"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Laundry is free of cost.\nLaundry man will come  3 days in a week (Sunday, Tuesday,
Friday).\n You can contact the laundry man on this no. 8556459525 only when its Urgent."
        android:textSize="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"/>




</LinearLayout>